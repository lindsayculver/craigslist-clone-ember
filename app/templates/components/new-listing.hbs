{{#if addNewListing}}
  <h5>New Listing</h5>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="seller">Seller's Name</label>
      {{input value=seller id="seller"}}
    </div>
    <div class="form-group">
      <label for="price">Price</label>
      {{input value=price id="price"}}
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      {{input value=description id="description"}}
    </div>
    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>
    <button {{action 'saveListing'}}>Save</button>
  </form>
{{else}}
<button {{action 'listingFormShow'}}>Add Listing</button>
{{/if}}
